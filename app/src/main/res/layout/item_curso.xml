<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imageViewTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:background="@drawable/pagweb"
                tools:layout_editor_absoluteX="-78dp"
                tools:layout_editor_absoluteY="-16dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dataInicioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:shadowColor="@color/primary"
                android:textAppearance="?android:textAppearanceSmall"
                android:textSize="5sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="105dp" />

            <TextView
                android:id="@+id/courselocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:shadowColor="@color/primary"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewTop"
                app:layout_constraintTop_toBottomOf="@+id/dataInicioTextView"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/courseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:shadowColor="@color/primary"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>