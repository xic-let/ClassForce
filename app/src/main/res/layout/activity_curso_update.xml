<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CursoUpdateActivity"
    android:id="@+id/atualizarcurso">

    <LinearLayout
        android:id="@+id/top_linear_Layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/top_backgorund"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/cursoUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Class Force"
        android:textColor="@color/white"
        android:textSize="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="21dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2">

        <LinearLayout
            android:id="@+id/linear_Layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:orientation="horizontal" />

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/minilogo">


        </ImageView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cursoUp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/updatetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/audiowide"
                android:text="Actualizar dados de Curso"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cursoIdEt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/outline_account_circle_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Insira ID do Curso"
                android:inputType="text"
                android:paddingStart="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/searchCursoButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_background"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Procurar"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="617dp" />

            <EditText
                android:id="@+id/nomeet"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/outline_account_circle_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Nome do Curso"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/locale"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_map_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Local"
                android:inputType="textPassword"
                android:paddingStart="10dp" />


            <EditText
                android:id="@+id/dataInicioTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Data de Inicio"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/dataFimTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Data de término"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/precoEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_price_check_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Preço"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/duracaoEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_hourglass_full_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Duração"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/edicaoEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_numbers_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Edição"
                android:inputType="text"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/descricaoEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/baseline_add_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:hint="Descrição"
                android:maxLength="300"
                android:inputType="text"
                android:paddingStart="10dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_background"
        android:text="Actualizar Dados"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />


</androidx.constraintlayout.widget.ConstraintLayout>